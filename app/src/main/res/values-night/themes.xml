<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CashFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorOnPrimary</item>


        <!-- Secondary -->
        <item name="android:colorSecondary">@color/colorSecondary</item>

<!--            Background and surface-->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnSecondary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Background and text -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>

        <!-- Surface color (cards, lists) -->
        <item name="colorSurface">@color/colorSurface</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/colorOnSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/baloo_bhaina_2_medium</item>
    </style>
</resources>